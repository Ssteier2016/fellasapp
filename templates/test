        function updateProductsCount() {
            document.getElementById('productsCount').textContent = `${products.length} productos disponibles`;
        }
        
        function updateProductGrid() {
            const productGrid = document.getElementById('productGrid');
            productGrid.innerHTML = '';
            
            const sortedProducts = [...products];
            
            switch(currentSort) {
                case 'price-low':
                    sortedProducts.sort((a, b) => {
                        const priceA = a.listPrice - (a.listPrice * (a.discount || 0) / 100);
                        const priceB = b.listPrice - (b.listPrice * (b.discount || 0) / 100);
                        return priceA - priceB;
                    });
                    break;
                case 'price-high':
                    sortedProducts.sort((a, b) => {
                        const priceA = a.listPrice - (a.listPrice * (a.discount || 0) / 100);
                        const priceB = b.listPrice - (b.listPrice * (b.discount || 0) / 100);
                        return priceB - priceA;
                    });
                    break;
                case 'discount':
                    sortedProducts.sort((a, b) => (b.discount || 0) - (a.discount || 0));
                    break;
                case 'popular':
                    sortedProducts.sort((a, b) => (b.likes || 0) - (a.likes || 0));
                    break;
                default:
                    sortedProducts.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
                    break;
            }
            
            const startIndex = (currentPage - 1) * productsPerPage;
            const endIndex = Math.min(startIndex + productsPerPage, sortedProducts.length);
            const currentProducts = sortedProducts.slice(startIndex, endIndex);
            
            if (currentProducts.length === 0) {
                productGrid.innerHTML = `
                    <div style="grid-column:1/-1;text-align:center;padding:3rem;color:#fff;">
                        <h3>No hay productos disponibles</h3>
                        <p>Vuelve m√°s tarde o contacta al administrador.</p>
                    </div>
                `;
                return;
            }
            
            currentProducts.forEach(product => {
                const finalPrice = product.listPrice - (product.listPrice * (product.discount || 0) / 100);
                const likeCount = favorites[product.id] ? favorites[product.id].count : 0;
                
                const card = document.createElement('div');
                card.className = 'product-card';
                card.innerHTML = `
                    <div class="product-image">
                        <img src="${product.images && product.images[0] ? product.images[0] : 'https://via.placeholder.com/300x200?text=No+Image'}" 
                             alt="${product.name}" 
                             loading="lazy">
                        <button class="favorite-btn" data-product-id="${product.id}" onclick="toggleFavorite('${product.id}')">
                            ${likeCount > 0 ? `‚ù§Ô∏è<span class="favorite-count">${likeCount}</span>` : 'ü§ç'}
                        </button>
                        ${product.discount > 0 ? `<span class="offer-badge">-${product.discount}%</span>` : ''}
                        ${!product.inStock ? '<span style="position:absolute;top:10px;right:10px;background:#ff6b6b;color:white;padding:3px 8px;border-radius:10px;font-size:0.7rem;font-weight:bold;">Agotado</span>' : ''}
                        <span style="position:absolute;bottom:5px;right:5px;background:rgba(0,0,0,0.7);color:white;padding:2px 6px;border-radius:10px;font-size:0.7rem;">
                            ‚ù§Ô∏è ${product.likes || 0}
                        </span>
                    </div>
                    <div class="product-info">
                        <div class="product-name">${product.name}</div>
                        <div class="product-prices">
                            ${product.discount > 0 ? `<span class="price-original">$${product.listPrice.toFixed(2)}</span>` : ''}
                            <span class="${product.discount > 0 ? 'price-offer' : 'price-regular'}">
                                $${finalPrice.toFixed(2)}
                            </span>
                        </div>
                        <div class="product-actions-compact">
                            <button class="btn-compact btn-cart" onclick="addToCart('${product.id}')" ${!product.inStock ? 'disabled' : ''}>
                                üõí
                            </button>
                            <button class="btn-compact btn-whatsapp-compact" onclick="openWhatsAppForProduct('${product.name}', ${finalPrice}, '${product.id}')">
                                <svg width="16" height="16" viewBox="0 0 24 24" style="margin-right:4px;">
                                    <path fill="currentColor" d="M17.6 6.32A7.85 7.85 0 0 0 12 4a8 8 0 0 0-8 8a7.93 7.93 0 0 0 1.38 4.48L4 20l3.64-1.36A8 8 0 0 0 20 12a7.92 7.92 0 0 0-2.4-5.68zM12 18.5a6.5 6.5 0 0 1-6.5-6.5A6.57 6.57 0 0 1 12 5.5a6.47 6.47 0 0 1 6.5 6.5a6.5 6.5 0 0 1-6.5 6.5zm3.5-4.9a1.5 1.5 0 0 1-1.5 1.5h-4a1.5 1.5 0 0 1-1.5-1.5v-4a1.5 1.5 0 0 1 1.5-1.5h4a1.5 1.5 0 0 1 1.5 1.5z"/>
                                </svg>
                                Reservar
                            </button>
                        </div>
                    </div>
                `;
                productGrid.appendChild(card);
            });
            
            const totalPages = Math.ceil(sortedProducts.length / productsPerPage);
            document.getElementById('pageInfo').textContent = `P√°gina ${currentPage} de ${totalPages}`;
            document.getElementById('prevPageBtn').disabled = currentPage === 1;
            document.getElementById('nextPageBtn').disabled = currentPage === totalPages || totalPages === 0;
            
            loadFavoriteButtons();
        }
        
        function sortProducts() {
            currentSort = document.getElementById('sortProducts').value;
            currentPage = 1;
            updateProductGrid();
        }
        
        function nextPage() {
            const totalPages = Math.ceil(products.length / productsPerPage);
            if (currentPage < totalPages) {
                currentPage++;
                updateProductGrid();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }
        
        function prevPage() {
            if (currentPage > 1) {
                currentPage--;
                updateProductGrid();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        // ==================== FAVORITES FUNCTIONS ====================
        function toggleFavorite(productId) {
            const product = products.find(p => p.id === productId);
            if (!product) return;
            
            if (!favorites[productId]) {
                favorites[productId] = {
                    count: 0,
                    name: product.name,
                    image: product.images && product.images[0] ? product.images[0] : 'https://via.placeholder.com/300x200?text=No+Image',
                    price: product.listPrice - (product.listPrice * (product.discount || 0) / 100)
                };
            }
            
            favorites[productId].count++;
            
            const favoriteBtn = event.currentTarget;
            favoriteBtn.classList.add('active');
            updateFavoriteButton(favoriteBtn, favorites[productId].count);
            
            localStorage.setItem('favorites', JSON.stringify(favorites));
            updateFavoritesCount();
            updateUserProfile();
            
            showNotification(`¬°Te gusta "${product.name}"! Likes: ${favorites[productId].count}`);
            
            // Guardar like en Firestore
            if (currentUser && currentUser.type !== 'anonymous') {
                saveLikeToFirestore(productId, currentUser.uid, product.name);
            }
            
            // Incrementar contador de likes en el producto
            incrementProductLikes(productId);
        }
        
        function updateFavoriteButton(button, count) {
            button.innerHTML = `‚ù§Ô∏è<span class="favorite-count">${count}</span>`;
        }
        
        function loadFavoriteButtons() {
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                const productId = btn.getAttribute('data-product-id');
                if (productId && favorites[productId]) {
                    btn.classList.add('active');
                    updateFavoriteButton(btn, favorites[productId].count);
                } else {
                    btn.innerHTML = 'ü§ç';
                }
            });
        }
        
        function updateFavoritesCount() {
            const totalFavorites = Object.keys(favorites).length;
            document.getElementById('favoritesCount').textContent = totalFavorites;
            document.getElementById('favoritesProfileCount').textContent = totalFavorites;
        }
        
        async function saveLikeToFirestore(productId, userId, productName) {
            try {
                const likeRef = db.collection('likes').doc(`${productId}_${userId}_${Date.now()}`);
                
                await likeRef.set({
                    productId: productId,
                    userId: userId,
                    productName: productName,
                    timestamp: firebase.firestore.FieldValue.serverTimestamp(),
                    userType: currentUser.type,
                    public: true
                });
            } catch (error) {
                console.error('Error guardando like:', error);
            }
        }
        
        async function incrementProductLikes(productId) {
            try {
                const productRef = db.collection('prendas').doc(productId);
                await productRef.update({
                    likes: firebase.firestore.FieldValue.increment(1)
                });
                
                // Actualizar el producto local
                const productIndex = products.findIndex(p => p.id === productId);
                if (productIndex !== -1) {
                    products[productIndex].likes = (products[productIndex].likes || 0) + 1;
                }
            } catch (error) {
                console.error('Error incrementando likes:', error);
            }
        }

        // ==================== CART FUNCTIONS ====================
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            if (!product) return;
            
            if (!product.inStock) {
                showNotification('Este producto est√° agotado');
                return;
            }
            
            const finalPrice = product.listPrice - (product.listPrice * (product.discount || 0) / 100);
            const existingItem = cart.find(item => item.id === product.id);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    id: product.id,
                    name: product.name,
                    image: product.images && product.images[0] ? product.images[0] : 'https://via.placeholder.com/300x200?text=No+Image',
                    price: finalPrice,
                    quantity: 1,
                    inStock: product.inStock
                });
            }
            
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCart();
            updateUserProfile();
            showNotification(`"${product.name}" agregado al carrito`);
        }
        
        function toggleCart() {
            showModal('cartModal');
            updateCart();
        }
        
        function updateCart() {
            const cartItems = document.getElementById('cartItems');
            const cartSummary = document.getElementById('cartSummary');
            const emptyCartMessage = document.getElementById('emptyCartMessage');
            const cartCount = document.getElementById('cartCount');
            cartItems.innerHTML = '';
            
            if (cart.length === 0) {
                emptyCartMessage.style.display = 'block';
                cartSummary.style.display = 'none';
                cartCount.textContent = '0';
                return;
            }
            
            emptyCartMessage.style.display = 'none';
            cartSummary.style.display = 'block';
            
            let subtotal = 0;
            cart.forEach((item, index) => {
                const itemTotal = item.price * item.quantity;
                subtotal += itemTotal;
                
                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                    <img src="${item.image}" alt="${item.name}">
                    <div class="cart-item-info">
                        <div class="cart-item-name">${item.name}</div>
                        <div class="cart-item-price">$${itemTotal.toFixed(2)}</div>
                        <div class="quantity-controls">
                            <button class="quantity-btn" onclick="updateQuantity(${index}, -1)">-</button>
                            <span>${item.quantity}</span>
                            <button class="quantity-btn" onclick="updateQuantity(${index}, 1)">+</button>
                        </div>
                        <button class="remove-item" onclick="removeFromCart(${index})">Eliminar</button>
                    </div>
                `;
                cartItems.appendChild(cartItem);
            });
            
            document.getElementById('cartSubtotal').textContent = `$${subtotal.toFixed(2)}`;
            document.getElementById('cartDiscount').textContent = '$0.00';
            document.getElementById('cartTotal').textContent = `$${subtotal.toFixed(2)}`;
            cartCount.textContent = cart.reduce((sum, item) => sum + item.quantity, 0);
        }
        
        function updateQuantity(index, change) {
            cart[index].quantity += change;
            if (cart[index].quantity <= 0) {
                cart.splice(index, 1);
            }
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCart();
            updateUserProfile();
        }
        
        function removeFromCart(index) {
            cart.splice(index, 1);
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCart();
            updateUserProfile();
            showNotification('Producto eliminado del carrito');
        }
        
        function openCheckoutInfoModal() {
            if (cart.length === 0) {
                showNotification('Tu carrito est√° vac√≠o');
                return;
            }
            
            showModal('checkoutInfoModal');
        }

        // ==================== WHATSAPP FUNCTIONS ====================
        function openWhatsAppForProduct(productName, productPrice, productId) {
            const message = `¬°Hola! Me interesa el producto:\n\n` +
                           `üì¶ *${productName}*\n` +
                           `üí∞ Precio: $${productPrice.toFixed(2)}\n` +
                           `üîó ID: ${productId}\n\n` +
                           `¬øPodr√≠an darme m√°s informaci√≥n?`;
            
            const encodedMessage = encodeURIComponent(message);
            const whatsappUrl = `https://wa.me/5491128662992?text=${encodedMessage}`;
            
            window.open(whatsappUrl, '_blank');
        }
        
        function reserveCartOnWhatsApp() {
            if (cart.length === 0) {
                showNotification('Tu carrito est√° vac√≠o');
                return;
            }
            
            let message = `¬°Hola! Quiero reservar los siguientes productos:\n\n`;
            let total = 0;
            
            cart.forEach((item, index) => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                message += `${index + 1}. *${item.name}*\n` +
                          `   Cantidad: ${item.quantity}\n` +
                          `   Precio unitario: $${item.price.toFixed(2)}\n` +
                          `   Subtotal: $${itemTotal.toFixed(2)}\n\n`;
            });
            
            message += `üí∞ *TOTAL: $${total.toFixed(2)}*\n\n` +
                      `Por favor, confirmen disponibilidad y forma de pago.`;
            
            const encodedMessage = encodeURIComponent(message);
            const whatsappUrl = `https://wa.me/5491128662992?text=${encodedMessage}`;
            
            window.open(whatsappUrl, '_blank');
            showNotification('Redirigiendo a WhatsApp para reservar el carrito...');
        }

        // ==================== UTILITY FUNCTIONS ====================
        function showApp() {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('appContainer').style.display = 'block';
            updateInstallButton();
        }
        
        function hideApp() {
            document.getElementById('loginScreen').classList.remove('hidden');
            document.getElementById('appContainer').style.display = 'none';
        }
        
        function updateUserProfile() {
            if (!currentUser) return;
            
            document.getElementById('userName').textContent = currentUser.name;
            document.getElementById('userEmail').textContent = currentUser.email || "Sesi√≥n de invitado";
            document.getElementById('cartItemsCount').textContent = cart.reduce((sum, item) => sum + item.quantity, 0);
            updateFavoritesCount();
        }
        
        function showSection(sectionId, element) {
            if (!adminAccess && sectionId === 'admin') {
                return;
            }
            
            document.querySelectorAll('section').forEach(section => {
                section.style.display = 'none';
            });
            
            const sectionElement = document.getElementById(`${sectionId}Section`);
            if (sectionElement) {
                sectionElement.style.display = 'block';
            }
            
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active-nav');
            });
            
            if (element && sectionId !== 'admin') {
                element.classList.add('active-nav');
            }
            
            if (sectionId === 'catalog') {
                updateProductGrid();
            } else if (sectionId === 'profile') {
                updateUserProfile();
            }
        }
        
        function showModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }
        
        function showNotification(message, duration = 3000) {
            const toast = document.getElementById('notificationToast');
            const messageElement = document.getElementById('notificationMessage');
            messageElement.textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), duration);
        }

        // ==================== CAROUSEL FUNCTIONS ====================
        let currentSlide = 0;
        const slides = document.querySelectorAll('#carousel .carousel-slide');
        const totalSlides = slides.length;
        
        function updateCarousel() {
            const carousel = document.getElementById('carousel');
            if (carousel) {
                carousel.style.transform = `translateX(-${currentSlide * 100}%)`;
            }
        }
        
        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateCarousel();
        }
        
        function prevSlide() {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            updateCarousel();
        }

        // ==================== INITIALIZATION ====================
        window.addEventListener('load', async () => {
            setTimeout(async () => {
                document.getElementById('loadingScreen').classList.add('hidden');
                
                // Mostrar pantalla de login
                hideApp();
                
                // Cargar favoritos
                const savedFavorites = localStorage.getItem('favorites');
                if (savedFavorites) {
                    favorites = JSON.parse(savedFavorites);
                } else {
                    favorites = {};
                }
                
                // Cargar carrito
                cart = JSON.parse(localStorage.getItem('cart')) || [];
                
                // Cargar productos desde Firebase
                await loadProductsFromFirebase();
                
                updateFavoritesCount();
                updateCart();
                
                // Start carousel
                if (slides.length > 0) {
                    setInterval(nextSlide, 5000);
                }
                
            }, 2000);
        });
        
        window.onclick = function(event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target === modal) {
                    modal.classList.remove('active');
                }
            });
        };
        
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                document.querySelectorAll('.modal.active').forEach(modal => {
                    modal.classList.remove('active');
                });
            }
        });
    </script>
</body>
</html>
