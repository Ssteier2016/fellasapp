        function updateInstallButton() {
            const installButton = document.getElementById('installButton');
            if (!installButton) return;
            
            if (isPWAInstalled) {
                installButton.innerHTML = '‚úÖ Instalada';
                installButton.classList.add('installed');
                installButton.onclick = null;
                installButton.style.cursor = 'default';
            } else if (deferredPrompt) {
                installButton.innerHTML = 'üì± Instalar App';
                installButton.classList.remove('installed');
                installButton.onclick = installPWA;
                installButton.style.cursor = 'pointer';
            } else {
                installButton.style.display = 'none';
            }
        }

        async function installPWA() {
            if (!deferredPrompt) {
                showNotification('La instalaci√≥n no est√° disponible.');
                return;
            }
            
            const installButton = document.getElementById('installButton');
            const originalText = installButton.innerHTML;
            
            try {
                installButton.innerHTML = '‚è≥ Instalando...';
                installButton.disabled = true;
                
                deferredPrompt.prompt();
                const choiceResult = await deferredPrompt.userChoice;
                
                if (choiceResult.outcome === 'accepted') {
                    isPWAInstalled = true;
                    installButton.innerHTML = '‚úÖ Instalada';
                    showNotification('¬°App instalada exitosamente!');
                } else {
                    installButton.innerHTML = originalText;
                    installButton.disabled = false;
                }
                
                deferredPrompt = null;
            } catch (error) {
                installButton.innerHTML = originalText;
                installButton.disabled = false;
                showNotification('Error durante la instalaci√≥n.');
            }
        }

        function shareApp() {
            if (navigator.share) {
                navigator.share({
                    title: 'Showroom +Roma',
                    text: 'Descubre prendas nuevas, √∫nicas e importadas',
                    url: window.location.href
                })
                .then(() => showNotification('¬°Gracias por compartir!'))
                .catch((error) => console.log('Error al compartir:', error));
            } else {
                navigator.clipboard.writeText(window.location.href)
                    .then(() => showNotification('¬°Enlace copiado al portapapeles!'))
                    .catch((error) => console.log('Error al copiar:', error));
            }
        }

        // ==================== ADMIN ACCESS ====================
        function checkAdminAccess() {
            const currentTime = Date.now();
            if (currentTime - lastClickTime > 1000) clickCount = 0;
            clickCount++;
            lastClickTime = currentTime;
            
            if (clickCount >= 7) {
                adminAccess = !adminAccess;
                clickCount = 0;
                
                if (adminAccess) {
                    showNotification('¬°Panel de administraci√≥n activado!');
                    showSection('admin', null);
                    loadAdminPanel();
                } else {
                    showNotification('Panel de administraci√≥n desactivado');
                    showSection('home', document.querySelector('.nav-item.active-nav'));
                }
            }
        }

        // ==================== AUTENTICACI√ìN ====================
        function loginWithGoogle() {
            const provider = new firebase.auth.GoogleAuthProvider();
            const googleBtn = document.querySelector('.btn-google');
            const originalText = googleBtn.innerHTML;
            
            googleBtn.innerHTML = '<div style="width:20px;height:20px;border:3px solid #4285F4;border-top-color:transparent;border-radius:50%;animation:spin 1s linear infinite"></div>';
            googleBtn.disabled = true;
            
            auth.signInWithPopup(provider)
                .then((result) => {
                    const user = result.user;
                    currentUser = {
                        uid: user.uid,
                        name: user.displayName,
                        email: user.email,
                        avatar: user.photoURL,
                        type: "google",
                        purchases: []
                    };
                    
                    localStorage.setItem('currentUser', JSON.stringify(currentUser));
                    localStorage.setItem('isLoggedIn', 'true');
                    
                    saveUserToFirestore(user);
                    showApp();
                    updateUserProfile();
                    showNotification(`¬°Bienvenido ${currentUser.name}!`);
                })
                .catch((error) => {
                    console.error('Error en autenticaci√≥n Google:', error);
                    showNotification('Error al iniciar sesi√≥n con Google.');
                    googleBtn.innerHTML = originalText;
                    googleBtn.disabled = false;
                });
        }
        
        function loginAnonymous() {
            currentUser = {
                uid: 'anonymous_' + Date.now(),
                name: "Invitado",
                email: null,
                avatar: "https://raw.githubusercontent.com/Ssteier2016/fellasapp/main/imagen/logo2.png",
                type: "anonymous",
                purchases: []
            };
            
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            localStorage.setItem('isLoggedIn', 'true');
            
            showApp();
            updateUserProfile();
            showNotification("Has iniciado sesi√≥n como invitado.");
        }
        
        function logout() {
            if (currentUser && currentUser.type === 'google') {
                auth.signOut();
            }
            
            currentUser = null;
            adminAccess = false;
            localStorage.removeItem('currentUser');
            localStorage.setItem('isLoggedIn', 'false');
            
            hideApp();
            showNotification("Has cerrado sesi√≥n");
        }
        
        function saveUserToFirestore(user) {
            const userRef = db.collection('users').doc(user.uid);
            const userData = {
                uid: user.uid,
                name: user.displayName || 'Usuario',
                email: user.email || null,
                avatar: user.photoURL || "https://raw.githubusercontent.com/Ssteier2016/fellasapp/main/imagen/logo2.png",
                lastLogin: firebase.firestore.FieldValue.serverTimestamp(),
                createdAt: firebase.firestore.FieldValue.serverTimestamp()
            };
            
            userRef.set(userData, { merge: true })
            .catch((error) => {
                console.error('Error guardando usuario en Firestore:', error);
            });
        }

        // ==================== IMAGE UPLOAD FUNCTIONS ====================
        function handleImageUpload(event) {
            const files = Array.from(event.target.files).slice(0, 4); // M√°ximo 4 im√°genes
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';
            uploadedImages = [];
            
            if (files.length > 4) {
                showNotification('M√°ximo 4 im√°genes permitidas. Se tomar√°n las primeras 4.');
            }
            
            files.forEach((file, index) => {
                if (index >= 4) return; // No m√°s de 4 im√°genes
                
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'preview-image';
                    img.title = file.name;
                    preview.appendChild(img);
                    
                    uploadedImages.push({
                        name: file.name,
                        data: e.target.result,
                        size: file.size,
                        type: file.type
                    });
                };
                
                reader.readAsDataURL(file);
            });
            
            document.getElementById('productImages').value = uploadedImages.length > 0 ? 'uploaded' : '';
        }

        // Funci√≥n para comprimir im√°genes
        function compressImage(dataUrl, maxWidth = 800, quality = 0.7) {
            return new Promise((resolve) => {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    let width = img.width;
                    let height = img.height;
                    
                    if (width > maxWidth) {
                        height = (height * maxWidth) / width;
                        width = maxWidth;
                    }
                    
                    canvas.width = width;
                    canvas.height = height;
                    
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0, width, height);
                    
                    const compressedDataUrl = canvas.toDataURL('image/jpeg', quality);
                    resolve(compressedDataUrl);
                };
                
                img.src = dataUrl;
            });
        }

        async function processUploadedImages() {
            const processedImages = [];
            
            for (let i = 0; i < uploadedImages.length; i++) {
                const image = uploadedImages[i];
                
                // Comprimir si es mayor a 300KB
                if (image.size > 300000) {
                    try {
                        const compressedDataUrl = await compressImage(image.data, 800, 0.7);
                        processedImages.push(compressedDataUrl);
                    } catch (error) {
                        console.error('Error comprimiendo imagen:', error);
                        processedImages.push(image.data);
                    }
                } else {
                    processedImages.push(image.data);
                }
            }
            
            return processedImages;
        }

        // ==================== ADMIN PANEL FUNCTIONS ====================
        async function loadAdminPanel() {
            await loadProductsFromFirebase();
            
            const adminList = document.getElementById('adminProductList');
            adminList.innerHTML = '';
            
            if (products.length === 0) {
                adminList.innerHTML = '<p style="text-align: center; color: #666;">No hay productos para mostrar</p>';
                return;
            }
            
            products.forEach(product => {
                const finalPrice = product.listPrice - (product.listPrice * (product.discount || 0) / 100);
                const productElement = document.createElement('div');
                productElement.className = 'admin-product-item';
                productElement.innerHTML = `
                    <img src="${product.images && product.images[0] ? product.images[0] : 'https://via.placeholder.com/80?text=No+Image'}" 
                         alt="${product.name}" 
                         class="admin-product-image">
                    <div class="admin-product-info">
                        <div class="admin-product-name">${product.name}</div>
                        <div class="admin-product-price">$${finalPrice.toFixed(2)}</div>
                        <small>Likes: ${product.likes || 0} | Stock: ${product.inStock ? 'Disponible' : 'Agotado'}</small>
                    </div>
                    <div class="admin-actions">
                        <button class="btn-edit" onclick="editProduct('${product.id}')">‚úèÔ∏è Editar</button>
                        <button class="btn-delete" onclick="deleteProduct('${product.id}')">üóëÔ∏è Eliminar</button>
                    </div>
                `;
                adminList.appendChild(productElement);
            });
            
            loadAdminStats();
        }
        
        async function editProduct(productId) {
            const product = products.find(p => p.id === productId);
            if (!product) {
                showNotification('Producto no encontrado');
                return;
            }
            
            editingProductId = productId;
            document.getElementById('productModalTitle').textContent = 'Editar Producto';
            document.getElementById('productId').value = productId;
            document.getElementById('productName').value = product.name;
            document.getElementById('productDescription').value = product.description || '';
            document.getElementById('productListPrice').value = product.listPrice;
            document.getElementById('productDiscount').value = product.discount || 0;
            document.getElementById('productCategory').value = product.category;
            document.getElementById('productBrand').value = product.brand;
            document.getElementById('productStock').value = product.inStock ? 'true' : 'false';
            
            // Limpiar y cargar previsualizaci√≥n de im√°genes existentes
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';
            uploadedImages = [];
            
            if (product.images && product.images.length > 0) {
                product.images.forEach((imgUrl, index) => {
                    const img = document.createElement('img');
                    img.src = imgUrl;
                    img.className = 'preview-image';
                    img.title = `Imagen ${index + 1}`;
                    preview.appendChild(img);
                    
                    uploadedImages.push({
                        name: `image_${index}.jpg`,
                        data: imgUrl,
                        size: 0
                    });
                });
                
                document.getElementById('productImages').value = 'existing';
            } else {
                document.getElementById('productImages').value = '';
            }
            
            showModal('productModal');
        }
        
        function openAddProductModal() {
            editingProductId = null;
            document.getElementById('productModalTitle').textContent = 'Agregar Nuevo Producto';
            document.getElementById('productForm').reset();
            document.getElementById('productId').value = '';
            document.getElementById('productDiscount').value = '0';
            document.getElementById('productStock').value = 'true';
            
            // Limpiar previsualizaci√≥n de im√°genes
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';
            uploadedImages = [];
            document.getElementById('productImages').value = '';
            
            showModal('productModal');
        }
        
        async function saveProduct() {
            const saveBtn = document.getElementById('saveProductBtn');
            const originalText = saveBtn.innerHTML;
            
            try {
                // Validar campos requeridos
                const productName = document.getElementById('productName').value.trim();
                const productListPrice = parseFloat(document.getElementById('productListPrice').value);
                const productCategory = document.getElementById('productCategory').value;
                const productBrand = document.getElementById('productBrand').value.trim();
                
                if (!productName || isNaN(productListPrice) || !productCategory || !productBrand) {
                    showNotification('Por favor, completa todos los campos requeridos (*)');
                    return;
                }
                
                if (uploadedImages.length === 0 && !document.getElementById('productImages').value) {
                    showNotification('Por favor, sube al menos una imagen del producto');
                    return;
                }
                
                // Cambiar estado del bot√≥n
                saveBtn.innerHTML = '‚è≥ Guardando...';
                saveBtn.disabled = true;
                
                const productId = document.getElementById('productId').value;
                const productDescription = document.getElementById('productDescription').value.trim();
                const productDiscount = parseInt(document.getElementById('productDiscount').value) || 0;
                const productStock = document.getElementById('productStock').value === 'true';
                
                // Procesar im√°genes
                let imageUrls = [];
                
                if (uploadedImages.length > 0) {
                    imageUrls = await processUploadedImages();
                    
                    // Advertencia si hay muchas im√°genes
                    if (imageUrls.length > 4) {
                        showNotification(`‚ö†Ô∏è Se subieron ${imageUrls.length} im√°genes. Se recomienda m√°ximo 4 im√°genes por producto.`);
                    }
                }
                
                const productData = {
                    name: productName,
                    description: productDescription,
                    listPrice: productListPrice,
                    discount: productDiscount,
                    category: productCategory,
                    brand: productBrand,
                    inStock: productStock,
                    updatedAt: firebase.firestore.FieldValue.serverTimestamp(),
                    public: true
                };
                
                // Solo agregar im√°genes si hay nuevas
                if (imageUrls.length > 0) {
                    productData.images = imageUrls;
                } else if (editingProductId && !imageUrls.length) {
                    // Si se est√° editando y no hay nuevas im√°genes, mantener las existentes
                    const existingProduct = products.find(p => p.id === editingProductId);
                    if (existingProduct && existingProduct.images) {
                        productData.images = existingProduct.images;
                    }
                }
                
                if (productId) {
                    // Actualizar producto existente en "prendas"
                    await db.collection('prendas').doc(productId).update(productData);
                    showNotification('‚úÖ Producto actualizado exitosamente');
                } else {
                    // Crear nuevo producto en "prendas"
                    productData.createdAt = firebase.firestore.FieldValue.serverTimestamp();
                    productData.likes = 0;
                    productData.public = true;
                    
                    await db.collection('prendas').add(productData);
                    showNotification('‚úÖ Producto agregado exitosamente');
                }
                
                closeModal('productModal');
                await loadProductsFromFirebase();
                if (adminAccess) {
                    await loadAdminPanel();
                }
            } catch (error) {
                console.error('Error guardando producto:', error);
                showNotification('‚ùå Error guardando producto: ' + error.message);
            } finally {
                // Restaurar bot√≥n
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
            }
        }
        
        async function deleteProduct(productId) {
            if (!confirm('¬øEst√°s seguro de eliminar este producto? Esta acci√≥n no se puede deshacer.')) {
                return;
            }
            
            try {
                await db.collection('prendas').doc(productId).delete();
                showNotification('‚úÖ Producto eliminado exitosamente');
                await loadProductsFromFirebase();
                if (adminAccess) {
                    await loadAdminPanel();
                }
            } catch (error) {
                console.error('Error eliminando producto:', error);
                showNotification('‚ùå Error eliminando producto: ' + error.message);
            }
        }
        
        async function loadAdminStats() {
            const statsGrid = document.getElementById('adminStats');
            
            const totalProducts = products.length;
            const totalLikes = products.reduce((sum, p) => sum + (p.likes || 0), 0);
            const inStockProducts = products.filter(p => p.inStock).length;
            const avgPrice = products.length > 0 ? 
                products.reduce((sum, p) => sum + (p.listPrice - (p.listPrice * (p.discount || 0) / 100)), 0) / products.length : 0;
            
            const mostLikedProduct = products.reduce((max, p) => (p.likes || 0) > (max.likes || 0) ? p : max, {likes: 0});
            
            statsGrid.innerHTML = `
                <div class="stat-item">
                    <div class="stat-value">${totalProducts}</div>
                    <div class="stat-label">Productos Totales</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${totalLikes}</div>
                    <div class="stat-label">Likes Totales</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${inStockProducts}</div>
                    <div class="stat-label">En Stock</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">$${avgPrice.toFixed(2)}</div>
                    <div class="stat-label">Precio Promedio</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${mostLikedProduct.likes || 0}</div>
                    <div class="stat-label">Likes del M√°s Popular</div>
                    <small>${mostLikedProduct.name || 'Ninguno'}</small>
                </div>
            `;
        }

        // ==================== PRODUCT FUNCTIONS ====================
        async function loadProductsFromFirebase() {
            try {
                // Intentar cargar desde la colecci√≥n "prendas"
                let snapshot;
                
                try {
                    snapshot = await db.collection('prendas')
                        .where('public', '==', true)
                        .orderBy('createdAt', 'desc')
                        .get();
                } catch (error) {
                    // Si falla por √≠ndice, cargar sin filtro
                    console.log('Cargando sin filtro public:', error);
                    snapshot = await db.collection('prendas')
                        .orderBy('createdAt', 'desc')
                        .get();
                }
                
                products = [];
                
                snapshot.forEach(doc => {
                    const data = doc.data();
                    
                    // Optimizar im√°genes si son Data URLs muy largas
                    const images = data.images || [];
                    const optimizedImages = images.map(img => {
                        // Si es Data URL muy larga, usar placeholder
                        if (img && img.startsWith('data:image') && img.length > 200000) {
                            return 'https://via.placeholder.com/600x400/667eea/ffffff?text=Imagen+Producto';
                        }
                        return img;
                    });
                    
                    products.push({
                        id: doc.id,
                        ...data,
                        images: optimizedImages.length > 0 ? optimizedImages : ['https://via.placeholder.com/600x400/667eea/ffffff?text=Imagen+Producto'],
                        createdAt: data.createdAt?.toDate() || new Date(),
                        likes: data.likes || 0,
                        inStock: data.inStock !== false // Default true
                    });
                });
                
                // Si no hay productos en "prendas", buscar en "producta"
                if (products.length === 0) {
                    try {
                        const snapshot2 = await db.collection('producta').get();
                        snapshot2.forEach(doc => {
                            const data = doc.data();
                            products.push({
                                id: doc.id,
                                ...data,
                                images: data.images || ['https://via.placeholder.com/600x400/667eea/ffffff?text=Imagen+Producto'],
                                createdAt: data.createdAt?.toDate() || new Date(),
                                likes: data.likes || 0,
                                inStock: true
                            });
                        });
                    } catch (error) {
                        console.log('No hay productos en colecci√≥n producta:', error);
                    }
                }
                
                updateProductsCount();
                updateProductGrid();
                
            } catch (error) {
                console.error('Error cargando productos:', error);
                showNotification('Error cargando productos. Usando datos de prueba.');
                
                // Datos de prueba
                products = getTestProducts();
                updateProductsCount();
                updateProductGrid();
            }
        }
        
